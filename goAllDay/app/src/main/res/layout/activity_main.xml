<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:foreground="@mipmap/img_coracao"
            android:foregroundGravity="center|fill_horizontal|center_vertical|center_horizontal|clip_horizontal|fill|bottom|clip_vertical|left|right|fill_vertical|top"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"></FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:id="@+id/imageView"
                android:src="@mipmap/man19"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:id="@+id/imageView2"
                android:src="@mipmap/ascendant6"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
